<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal|center"
                        android:paddingBottom="0dp"
                        android:shadowColor="@android:color/background_light"
                        android:text="Sign in"
                        android:textColor="@android:color/background_light"
                        tools:background="@android:color/background_dark"
                        tools:gravity="center_vertical|center_horizontal|center"
                        tools:layout_marginBottom="20dp"
                        tools:layout_marginTop="20dp"
                        tools:textSize="30sp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="0dp"
                    tools:layout_marginLeft="0dp"
                    tools:layout_marginRight="0dp"
                    tools:layout_margin="0dp"
                    tools:layout_marginBottom="20dp"
                    tools:layout_marginTop="20dp"
                    android:background="@android:color/darker_gray">
                    <TextView
                        android:text="Login"
                        android:id="@+id/textView3"
                        android:layout_width="80dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="0dp"
                        android:layout_height="20dp" />

                    <EditText
                        android:id="@+id/slogin"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="your login" />


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/darker_gray">
                    <TextView
                        android:text="Password"
                        android:id="@+id/textView4"
                        android:layout_width="80dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="0dp"
                        android:layout_height="20dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:inputType="textPassword"
                        android:text=""
                        android:ems="10"
                        android:id="@+id/spassword"
                        android:layout_marginTop="20dp"
                        android:layout_height="40dp" />

                </LinearLayout>

                <Button
                    android:id="@+id/connect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Log in" />

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:id="@+id/progressBar2"
                    android:background="@android:color/background_dark"
                    android:layout_marginTop="20dp"
                    android:layout_height="10dp">
                </ProgressBar>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/textView6"
                        android:background="@android:color/background_dark"
                        tools:text="Registration"
                        android:shadowColor="@android:color/background_light"
                        android:textColor="@android:color/background_light"
                        android:scrollbarSize="23dp"
                        tools:textSize="30sp"
                        android:gravity="top|center_vertical|center_horizontal|center"
                        android:foregroundGravity="center_vertical|center_horizontal|center"
                        android:layout_gravity="center_vertical|center_horizontal|center" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="0dp"
                    tools:layout_marginLeft="0dp"
                    tools:layout_marginRight="0dp"
                    tools:layout_margin="0dp"
                    tools:layout_marginBottom="20dp"
                    tools:layout_marginTop="20dp"
                    android:background="@android:color/darker_gray">
                    <TextView
                        android:text="Login"
                        android:id="@+id/textView7"
                        android:layout_width="80dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="0dp"
                        android:layout_height="20dp" />

                    <EditText
                        android:id="@+id/logir"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="enter login" />


                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="0dp"
                    tools:layout_marginLeft="0dp"
                    tools:layout_marginRight="0dp"
                    tools:layout_margin="0dp"
                    tools:layout_marginBottom="20dp"
                    tools:layout_marginTop="20dp"
                    android:background="@android:color/darker_gray">
                    <TextView
                        android:text="First Name"
                        android:id="@+id/textView8"
                        android:layout_width="80dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="0dp"
                        android:layout_height="20dp" />

                    <EditText
                        android:id="@+id/fname"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="enter First name" />


                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="0dp"
                    tools:layout_marginLeft="0dp"
                    tools:layout_marginRight="0dp"
                    tools:layout_margin="0dp"
                    tools:layout_marginBottom="20dp"
                    tools:layout_marginTop="20dp"
                    android:background="@android:color/darker_gray">
                    <TextView
                        android:text="Last Name"
                        android:id="@+id/textView9"
                        android:layout_width="80dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="0dp"
                        android:layout_height="20dp" />

                    <EditText
                        android:id="@+id/lname"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="enter Last Name" />


                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="0dp"
                    tools:layout_marginLeft="0dp"
                    tools:layout_marginRight="0dp"
                    tools:layout_margin="0dp"
                    tools:layout_marginBottom="20dp"
                    tools:layout_marginTop="20dp"
                    android:background="@android:color/darker_gray">
                    <TextView
                        android:text="Password"
                        android:id="@+id/textView10"
                        android:layout_width="80dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="0dp"
                        android:layout_height="20dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:inputType="textPassword"
                        android:text=""
                        android:ems="10"
                        android:id="@+id/password"
                        android:layout_marginTop="20dp"
                        android:layout_height="40dp" />


                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="0dp"
                    tools:layout_marginLeft="0dp"
                    tools:layout_marginRight="0dp"
                    tools:layout_margin="0dp"
                    tools:layout_marginBottom="20dp"
                    tools:layout_marginTop="20dp"
                    android:background="@android:color/darker_gray">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="0dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:text="height" />

                    <EditText
                        android:id="@+id/taille"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:ems="10"
                        android:inputType="number"
                        android:text="enter height" />


                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="0dp"
                    tools:layout_marginLeft="0dp"
                    tools:layout_marginRight="0dp"
                    tools:layout_margin="0dp"
                    tools:layout_marginBottom="20dp"
                    tools:layout_marginTop="20dp"
                    android:background="@android:color/darker_gray">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="0dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:text="enter weight" />

                    <EditText
                        android:id="@+id/pids"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:ems="10"
                        android:inputType="number"
                        android:text="enter weight" />


                </LinearLayout>

                <Button
                    android:id="@+id/registre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Register" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>